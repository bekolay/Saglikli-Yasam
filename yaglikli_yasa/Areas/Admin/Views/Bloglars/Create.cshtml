@model saglikveri.Bloglar

@{
    ViewBag.Title = "Blog Ekle";
}







<div class="row">
    <div class="col-sm-6">
        <div class="page-title-box">
            <h4>Kullanıcı Ekle</h4>
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a href="javascript: void(0);">Sağlıklı Yasam</a></li>
                <li class="breadcrumb-item"><a href="javascript: void(0);">Admin Panel</a></li>
                <li class="breadcrumb-item"><a href="~/Admin/Bloglars/">Bloglar</a></li>
                <li class="breadcrumb-item active">Blog Ekle</li>
            </ol>
        </div>
    </div>
</div>

<div class="">
    <div class="card">
        <div class="card-body">
            <div class="custom-validation">

                @using (Html.BeginForm("Cogluresim", "Bloglars", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <h4 class="card-title">Çoklu Resim</h4>
                    <p class="card-title-desc">
                        Lütfen içeriği girmeden önce resimleri kayıt ederseniz iyi olur olası bir durumda sadece resimler kayıt edilip sayfa yenilenecektir.
                    </p>
                    @*<div>
                <div class="dropzone">
                    <div class="fallback">

                    </div>
                    <div class="dz-message needsclick">
                        <div class="mb-3">
                            <i class="mdi mdi-cloud-upload-outline text-muted display-4"></i>
                        </div>
                        <h4>Drop files here or click to upload.</h4>
                    </div>
                </div>
            </div>*@
                    <input name="ChosenFiles" type="file" id="ChosenFiles" multiple="multiple">
                    <div class="text-center mt-4">
                        <input type="submit" value="Kaydet" class="btn btn-primary waves-effect waves-light">
                    </div>

                }

                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-horizontal">
                        <h4>Kullanici Ekle</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <br>

                        <div class="form_control">
                            <label class="form-label">Blog Resim</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.bloResim, new { htmlAttributes = new { @type = "file", @accept = ".png,.jpg, .jpeg,/Hesap/", @id = "input-file-now-custom-1", @class = "bootstrap-filestyle input-group" } })
                            </div>
                            <div class="mb-3">

                            </div>
                        </div>

                        <div class="form_control">
                            <label class="form-label">Blog Adı</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.blogAdi, new { htmlAttributes = new { @type = "text", @class = "form-control text-box single-line", @required = "", @minlength = "5", @placeholder = "Blog Adı" } })
                            </div>
                            <div class="mb-3">

                            </div>
                        </div>

                        <br>

                        <div class="form_control">
                            <label class="form-label">Blog Açıklama</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.blogAcilama, new { htmlAttributes = new { @type = "text", @class = "form-control text-box single-line", @required = "", @minlength = "5", @placeholder = "157 karakterlik açıklama" } })
                            </div>
                            <div class="mb-3">

                            </div>
                        </div>

                        <br>

                        <div class="form_control">
                            <label class="form-label">Anahtar Kelime</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.blogKeyword, new { htmlAttributes = new { @type = "text", @class = "form-control text-box single-line", @required = "", @minlength = "7", @placeholder = "anahtar,anahtar2...." } })
                            </div>
                            <div class="mb-3">

                            </div>
                        </div>

                        <br>

                        <div class="form_control">
                            <label class="form-label">Kategori</label>
                            <div class="col-md-10">
                                @Html.DropDownList("kategorid", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="mb-3">

                            </div>
                        </div>

                        <br>

                        <div class="form_control">
                            <label class="form-label">Blog Yazı</label>
                            <div class="col-md-10">
                                <form method="post">
                                    <div class="controls">
                                        @Html.TextAreaFor(model => model.blogYazi, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @type = "text" } })
                                    </div>
                                </form>
                            </div>
                            <div class="mb-3">

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="btn btn-outline-primary waves-effect waves-light">
                                <input type="submit" value="Kaydet" class="btn btn-default" />
                            </div>
                            @Html.ActionLink("Geri Gel", "Index")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Admin/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        var editor = CKEDITOR.instances['blogYazi'];
        if (editor) { editor.destroy(true); }

        CKEDITOR.replace('blogYazi', {
            enterMode: CKEDITOR.ENTER_BR,
            filebrowserBrowseUrl: '/images?type=images',
            filebrowserFlashBrowseUrl: '/images/?type=Flash',
        });

    </script>
}