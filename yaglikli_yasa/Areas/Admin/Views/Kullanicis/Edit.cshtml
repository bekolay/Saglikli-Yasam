@model saglikveri.Kullanici

@{
    ViewBag.Title = "Kullanıcı Düzenle" +" " + Model.kullaniciadi;
}

<div class="row">
    <div class="col-sm-6">
        <div class="page-title-box">
            <h4>Kullanıcı Ekle</h4>
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a href="javascript: void(0);">Sağlıklı Yasam</a></li>
                <li class="breadcrumb-item"><a href="javascript: void(0);">Admin Panel</a></li>
                <li class="breadcrumb-item"><a href="~/Admin/Kullanicis/">Kullanıcı</a></li>
                <li class="breadcrumb-item active">Kullanıcı Düzenle</li>
            </ol>
        </div>
    </div>
</div>



<div class="">
    <div class="card">
        <div class="card-body">
            <div class="custom-validation">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.kullaniciadi)
                    @Html.HiddenFor(model => model.kullaniciadisoyadi)
                    @Html.HiddenFor(model => model.KullaniciEskiSifre)
                    @Html.HiddenFor(model => model.kullaniciemail)
                    @Html.HiddenFor(model => model.kullanicitarih)
                    @Html.HiddenFor(model => model.KullaniciUrl)
                    @Html.HiddenFor(model => model.kullanicid)

                <div class="form-horizontal">
                    <h4>Kullanici Düzenle</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <br>

                    <br>

                    <div class="form_control">
                        <label class="form-label">Kullanıcı Şifre</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.kullaniciSifre, new { htmlAttributes = new { @type = "password", @class = "form-control text-box single-line", @required = "", @minlength = "6", @placeholder = "Kullanıcı şifresi en az 6 karakter olmalıdır." } })
                        </div>
                        <div class="mb-3">

                        </div>
                    </div>

                    <br>

                    <div class="form_control">
                        <label class="form-label">Kullanıcı Şifre Tekrar</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KullaniciSifretekrar, new { htmlAttributes = new { @type = "password", @class = "form-control text-box single-line", @required = "", @minlength = "6", @placeholder = "Kullanıcı şifresi en az 6 karakter olmalıdır." } })
                        </div>
                        <div class="mb-3">

                        </div>
                    </div>

                    <br>

                    <div class="form_control">
                        <label class="form-label">Kullanıcı Eski Şifre</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KullaniciEskiSifre, new { htmlAttributes = new { @type = "text", @class = "form-control text-box single-line", @required = "", @minlength = "6", @placeholder = "Kullanıcı şifresi en az 6 karakter olmalıdır.", disabled = "disabled" } })
                        </div>
                        <div class="mb-3">

                        </div>
                    </div>

                    <br>

                    <div class="form_control">
                        <label class="form-label">Kullanıcı Aktifmi</label>
                        <div class="col-md-10 form-check form-switch form-switch-md mb-3">
                            @Html.EditorFor(model => model.KullaniciAktifMi, new { htmlAttributes = new { @class = "form-check-input", @type = "checkbox", @id = "customSwitchsizemd" } })
                        </div>
                        <div class="mb-3">

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="btn btn-outline-primary waves-effect waves-light">
                            <input type="submit" value="Kaydet" class="btn btn-default" />
                        </div>
                        @Html.ActionLink("Geri Gel", "Index")
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
